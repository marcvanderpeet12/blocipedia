<h1>Public wikis </h1>

    <% if policy(Wiki.new).create? %>
     <%= link_to "New wiki", new_wiki_path, class: "btn btn-default" %>
    <% end %>

  </br>
      <%= @wikis.each do |wiki| %>
      <div class="well" >
        <p>Title: <%= wiki.title %> </p>
        <p>Body:  <%= wiki.body %></p>
        <p><%= link_to wiki.title, wiki_path(wiki.id) %></p>
        <p> <%= link_to "", wiki, method: :delete, class: 'glyphicon glyphicon-ok' %>
       </div> 
      <% end %>

      <p><% if policy(Wiki.new).create? %>
         <%= link_to "New wiki", new_wiki_path %>
        <% end %></p>

